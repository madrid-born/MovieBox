@model MovieBox.ViewModels.HomeDashboardVm

@{
    ViewData["Title"] = "Home";
}

<div class="mb-page">

    <div class="mb-panel mb-panel--gold mb-hero">
        <div>
            <h1 class="mb-title">🎬 MovieBox</h1>
            <div class="mb-subtitle">Quick shortcuts + per-list statistics</div>
            <div class="mb-divider"></div>
        </div>

        <div class="d-flex gap-2 flex-wrap">
            <a class="btn btn-primary" asp-controller="Movie" asp-action="Categorize">
                <i class="bi bi-plus-circle me-2"></i>Categorize
            </a>
            <a class="btn btn-outline-primary" asp-controller="Movie" asp-action="Filter">
                <i class="bi bi-search me-2"></i>Filter
            </a>
            <a class="btn btn-outline-secondary" asp-controller="Manage" asp-action="Index">
                <i class="bi bi-sliders me-2"></i>Manage
            </a>
        </div>
    </div>

    <div class="row g-4 mt-2">

        <div class="col-lg-6">
            <div class="mb-panel h-100">
                <div class="mb-panel-body text-center">
                    <div class="mb-2" style="font-size:34px;color: var(--mb-gold);">
                        <i class="bi bi-collection-play"></i>
                    </div>
                    <h4 class="mb-title mb-1">Movie Section</h4>
                    <p class="mb-subtitle mb-0">Add/edit movies, categorize, and filter with precision.</p>

                    <div class="d-grid gap-2 mt-4">
                        <a class="btn btn-primary" asp-controller="Movie" asp-action="Categorize">
                            <i class="bi bi-plus-circle me-2"></i>➕ Categorize Movie
                        </a>
                        <a class="btn btn-outline-primary" asp-controller="Movie" asp-action="Filter">
                            <i class="bi bi-funnel me-2"></i>🔍 Filter Movies
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="mb-panel h-100">
                <div class="mb-panel-body text-center">
                    <div class="mb-2" style="font-size:34px;color: var(--mb-gold);">
                        <i class="bi bi-sliders2"></i>
                    </div>
                    <h4 class="mb-title mb-1">Manage Section</h4>
                    <p class="mb-subtitle mb-0">Create lists and categories to keep everything clean.</p>

                    <div class="d-grid gap-2 mt-4">
                        <a class="btn btn-primary" asp-controller="Manage" asp-action="List">
                            <i class="bi bi-folder2-open me-2"></i>📂 Manage Lists
                        </a>
                        <a class="btn btn-outline-primary" asp-controller="Manage" asp-action="Category">
                            <i class="bi bi-tags me-2"></i>🏷 Manage Categories
                        </a>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="mb-panel mt-4">
        <div class="mb-panel-header">
            <div class="d-flex align-items-center justify-content-between flex-wrap gap-2">
                <div>
                    <h4 class="mb-title mb-0">📊 List Statistics</h4>
                    <div class="mb-subtitle">A quick snapshot of your library health.</div>
                </div>
            </div>
            <div class="mb-divider"></div>
        </div>

        <div class="mb-panel-body">
            @if (Model.Lists.Count == 0)
            {
                <div class="text-muted">No lists found.</div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead>
                        <tr>
                            <th>List</th>
                            <th class="text-end">Movies</th>
                            <th class="text-end">Active</th>
                            <th class="text-end">Deleted</th>
                            <th class="text-end">Available</th>
                            <th class="text-end">Seen</th>
                            <th class="text-end">Categories</th>
                            <th class="text-end">Languages</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var r in Model.Lists)
                        {
                            <tr>
                                <td class="fw-semibold">
                                    <a asp-controller="Movie"
                                       asp-action="Filter"
                                       asp-route-listId="@r.ListId"
                                       class="text-decoration-none">
                                        @r.Name
                                    </a>
                                </td>
                                <td class="text-end">@r.TotalMovies</td>
                                <td class="text-end">@r.ActiveMovies</td>
                                <td class="text-end">@r.DeletedMovies</td>
                                <td class="text-end">@r.AvailableMovies</td>
                                <td class="text-end">@r.SeenMovies</td>
                                <td class="text-end">@r.CategoriesCount</td>
                                <td class="text-end">@r.LanguagesCount</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

</div>