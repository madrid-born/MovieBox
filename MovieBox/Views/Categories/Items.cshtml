@model MovieBox.ViewModels.CategoryItemsVM

@{
    ViewData["Title"] = "Category Items";
}

<h2>Browse Movies by Category</h2>

<form method="get" asp-action="Items" class="mb-3">
    <div class="row g-2 align-items-end">
        <div class="col-md-6">
            <label class="form-label">Category</label>
            <select name="categoryId" class="form-select">
                <option value="">-- Select a category --</option>
                @foreach (var c in Model.Categories)
                {
                    var selected = (Model.SelectedCategoryId?.ToString() == c.Value) ? "selected" : "";
                    <option value="@c.Value" selected="@selected">@c.Text</option>
                }
            </select>
        </div>

        <div class="col-md-3">
            <button type="submit" class="btn btn-primary w-100">Show Movies</button>
        </div>

        @if (Model.SelectedCategoryId is not null)
        {
            <div class="col-md-3">
                <a class="btn btn-outline-secondary w-100" asp-action="Items">Clear</a>
            </div>
        }
    </div>
</form>

@if (Model.SelectedCategoryId is null)
{
    <div class="text-muted">Select a category to see its movies.</div>
}
else if (Model.Movies.Count == 0)
{
    <div class="alert alert-warning">No movies found in this category.</div>
}
else
{
    <div class="mb-2 text-muted">
        Showing <strong>@Model.Movies.Count</strong> movie(s).
    </div>

    <table class="table table-striped table-hover align-middle">
        <thead>
            <tr>
                <th>Title</th>
                <th style="width:90px;">Year</th>
                <th style="width:110px;">Length</th>
                <th style="width:140px;">Language</th>
                <th style="width:180px;">List</th>
                <th style="width:110px;">Seen</th>
                <th style="width:130px;">Available</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var m in Model.Movies)
        {
            <tr>
                <td>@m.Title</td>
                <td>@(m.Year?.ToString() ?? "-")</td>
                <td>@(m.Length.HasValue ? $"{m.Length} min" : "-")</td>
                <td>@(string.IsNullOrWhiteSpace(m.Language) ? "-" : m.Language)</td>
                <td>@(string.IsNullOrWhiteSpace(m.ListName) ? "-" : m.ListName)</td>
                <td>@(m.IsSeen.HasValue ? (m.IsSeen.Value ? "Yes" : "No") : "-")</td>
                <td>@(m.IsAvailable.HasValue ? (m.IsAvailable.Value ? "Yes" : "No") : "-")</td>
            </tr>
        }
        </tbody>
    </table>
}
