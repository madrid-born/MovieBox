@model CategoryIntersectionVM

@{
    ViewData["Title"] = "Filter Movies by Categories";
}

<h2>Filter Movies by Categories (Intersection)</h2>

<form method="get" asp-action="Intersect" class="mb-3">
    <div class="mb-2">
        <div class="text-muted">
            Select multiple categories. Results will include movies that have <strong>ALL</strong> selected categories.
        </div>
    </div>

    <div class="border rounded p-3 mb-3" style="max-height: 260px; overflow:auto;">
        @if (Model.Categories?.Count > 0)
        {
            foreach (var c in Model.Categories)
            {
                var id = int.Parse(c.Value!);
                var checkedAttr = Model.SelectedCategoryIds.Contains(id) ? "checked" : "";

                <div class="form-check">
                    <input class="form-check-input"
                           type="checkbox"
                           name="selectedCategoryIds"
                           value="@id"
                           @checkedAttr />
                    <label class="form-check-label">@c.Text</label>
                </div>
            }
        }
        else
        {
            <div class="text-muted">No categories found.</div>
        }
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Filter</button>
        <a class="btn btn-outline-secondary" asp-action="Intersect">Clear</a>
    </div>
</form>

@if (Model.SelectedCategoryIds.Count == 0)
{
    <div class="text-muted">Pick one or more categories to see matching movies.</div>
}
else if (Model.Movies.Count == 0)
{
    <div class="alert alert-warning">
        No movies matched the selected categories (intersection).
    </div>
}
else
{
    <div class="mb-2 text-muted">
        Showing <strong>@Model.Movies.Count</strong> movie(s) matching all selected categories.
    </div>

    <table class="table table-striped table-hover align-middle">
        <thead>
            <tr>
                <th>Title</th>
                <th style="width:90px;">Year</th>
                <th style="width:110px;">Length</th>
                <th style="width:140px;">Language</th>
                <th style="width:180px;">List</th>
                <th style="width:110px;">Seen</th>
                <th style="width:130px;">Available</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var m in Model.Movies)
        {
            <tr>
                <td>@m.Title</td>
                <td>@(m.Year?.ToString() ?? "-")</td>
                <td>@(m.Length.HasValue ? $"{m.Length} min" : "-")</td>
                <td>@(string.IsNullOrWhiteSpace(m.Language) ? "-" : m.Language)</td>
                <td>@(string.IsNullOrWhiteSpace(m.ListName) ? "-" : m.ListName)</td>
                <td>@(m.IsSeen.HasValue ? (m.IsSeen.Value ? "Yes" : "No") : "-")</td>
                <td>@(m.IsAvailable.HasValue ? (m.IsAvailable.Value ? "Yes" : "No") : "-")</td>
            </tr>
        }
        </tbody>
    </table>
}
