@model MovieBox.ViewModels.CategoryVm

@{
    ViewData["Title"] = "Manage Categories";
}

<div class="mb-page">

    <div class="mb-panel mb-panel--gold mb-hero">
        <div>
            <h2 class="mb-title mb-0">
                <i class="bi bi-tags-fill me-2" style="color: var(--mb-gold);"></i>
                Category Manager
            </h2>
            <div class="mb-subtitle">Create categories per list for precise filtering.</div>
            <div class="mb-divider"></div>
        </div>
    </div>

    @if (TempData["Success"] is string msg)
    {
        <div class="alert alert-success mt-3 mb-0">@msg</div>
    }

    <div class="row g-4 mt-3">
        <div class="col-lg-5">
            <div class="mb-panel h-100">
                <div class="mb-panel-header">
                    <h5 class="mb-title mb-0">
                        <i class="bi bi-plus-square me-2" style="color: var(--mb-gold);"></i>
                        @(Model.EditId == null ? "Create New Category" : "Edit Category")
                    </h5>
                    <div class="mb-subtitle">Attach categories to a specific list.</div>
                    <div class="mb-divider"></div>
                </div>

                <div class="mb-panel-body">
                    <form asp-action="SaveCategory" method="post">
                        @Html.AntiForgeryToken()

                        <input type="hidden" asp-for="EditId" />

                        <div class="mb-3">
                            <label class="form-label">Category name</label>
                            <input asp-for="Load.Name" class="form-control" placeholder="e.g. Action" />
                            <span asp-validation-for="Load.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">List</label>
                            <select asp-for="Load.ListId" asp-items="Model.Lists" class="form-select">
                                <option value="">-- Select a list --</option>
                            </select>
                            <span asp-validation-for="Load.ListId" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2 flex-wrap">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save2 me-2"></i>
                                @(Model.EditId == null ? "Create new category" : "Edit the category")
                            </button>

                            @if (Model.EditId != null)
                            {
                                <a asp-action="Category" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle me-2"></i>Cancel
                                </a>
                            }
                        </div>
                    </form>
                </div>

            </div>
        </div>

        <div class="col-lg-7">
            <div class="mb-panel">
                <div class="mb-panel-header">
                    <h5 class="mb-title mb-0">
                        <i class="bi bi-grid-3x3-gap me-2" style="color: var(--mb-gold);"></i>
                        Existing Categories
                    </h5>
                    <div class="mb-subtitle">Use these in Filter to narrow results.</div>
                    <div class="mb-divider"></div>
                </div>

                <div class="mb-panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle mb-0">
                            <thead>
                            <tr>
                                <th>Category</th>
                                <th>List</th>
                                <th class="text-end"></th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var c in Model.Categories)
                            {
                                <tr>
                                    <td class="fw-semibold">@c.Title</td>
                                    <td class="text-muted">@c.ListTitle</td>
                                    <td class="text-end">
                                        <a asp-action="EditCategory" asp-route-id="@c.Id" class="btn btn-sm btn-outline-secondary">
                                            <i class="bi bi-pencil me-1"></i>Edit
                                        </a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}