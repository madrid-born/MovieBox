@model MovieBox.ViewModels.ListVm

@{
    ViewData["Title"] = "Manage List";
}

<div class="mb-page">

    <div class="mb-panel mb-panel--gold mb-hero">
        <div>
            <h2 class="mb-title mb-0">
                <i class="bi bi-folder2-open me-2" style="color: var(--mb-gold);"></i>
                List Manager
            </h2>
            <div class="mb-subtitle">Create lists and keep your movie library organized.</div>
            <div class="mb-divider"></div>
        </div>
    </div>

    @if (TempData["Success"] is string msg)
    {
        <div class="alert alert-success mt-3 mb-0">@msg</div>
    }

    <div class="row g-4 mt-3">
        <div class="col-lg-5">
            <div class="mb-panel h-100">
                <div class="mb-panel-header">
                    <h5 class="mb-title mb-0">
                        <i class="bi bi-pencil-square me-2" style="color: var(--mb-gold);"></i>
                        @(Model.EditId == null ? "Create New List" : "Edit List")
                    </h5>
                    <div class="mb-subtitle">Name it clearly (e.g. “Watchlist”, “Favorites”).</div>
                    <div class="mb-divider"></div>
                </div>

                <div class="mb-panel-body">
                    <form asp-action="SaveList" method="post">
                        @Html.AntiForgeryToken()

                        <input type="hidden" asp-for="EditId" />

                        <div class="mb-3">
                            <label class="form-label">List name</label>
                            <input asp-for="Load.Name" class="form-control" placeholder="e.g. Watchlist" />
                            <span asp-validation-for="Load.Name" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2 flex-wrap">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save2 me-2"></i>
                                @(Model.EditId == null ? "Create new list" : "Edit the list")
                            </button>

                            @if (Model.EditId != null)
                            {
                                <a asp-action="List" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle me-2"></i>Cancel
                                </a>
                            }
                        </div>
                    </form>
                </div>

            </div>
        </div>

        <div class="col-lg-7">
            <div class="mb-panel">
                <div class="mb-panel-header">
                    <h5 class="mb-title mb-0">
                        <i class="bi bi-list-ul me-2" style="color: var(--mb-gold);"></i>
                        Existing Lists
                    </h5>
                    <div class="mb-subtitle">Edit anytime — your stats will update on Home.</div>
                    <div class="mb-divider"></div>
                </div>

                <div class="mb-panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle mb-0">
                            <thead>
                            <tr>
                                <th>Title</th>
                                <th class="text-end"></th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var m in Model.Lists)
                            {
                                <tr>
                                    <td class="fw-semibold">@m.Title</td>
                                    <td class="text-end">
                                        <a asp-action="EditList" asp-route-id="@m.Id" class="btn btn-sm btn-outline-secondary">
                                            <i class="bi bi-pencil me-1"></i>Edit
                                        </a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}